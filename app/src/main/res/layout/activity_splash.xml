<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity"
    android:background="@color/newPrimary">

    <ImageView
        android:id="@+id/imgSplashLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:outlineSpotShadowColor="@color/black"
        android:shadowColor="@color/black"
        android:shadowDx="@integer/material_motion_duration_long_1"
        android:src="@drawable/book_icon" />

    <TextView
        android:id="@+id/SplashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgSplashLogo"
        android:layout_centerHorizontal="true"
        android:text="Book Hub"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DemoNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SplashTitle"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:text="Demo App only for Practical Experiment"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic" />


</RelativeLayout>